<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="paperformat_project_task_cargo_report" model="report.paperformat">
            <field name="name">Reporte de carga</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">22</field>
            <field name="dpi">90</field>
        </record>

        <record id="project_task_cargo_report_action" model="ir.actions.report">
            <field name="name">Reporte de carga PDF</field>
            <field name="model">project.task</field>
            <field name="report_type">qweb-pdf</field>
            <field name="paperformat_id" ref="fleet_additionals.paperformat_project_task_cargo_report"/>
            <field name="report_name">fleet_additionals.report_project_task_cargo</field>
            <field name="report_file">fleet_additionals.report_project_task_cargo</field>
            <field name="print_report_name">'Solicitud de carga Planta San Fernando'</field>
            <field name="binding_model_id" ref="fleet_additionals.model_project_task"/>
            <field name="binding_type">report</field>
        </record>

        <template id="fleet_additionals.report_project_task_cargo">
            <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                            <div class="page">
                                <t t-foreach="docs[0]" t-as="o">
                                    <h2 class="text-center">Solicitud de carga Planta San Fernando</h2>
                                    <table style="margin-bottom:20px;">
                                        <thead>
                                                <tr >
                                                    <th style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Fecha</span>
                                                    </th>
                                                    <th style="width: 300px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Chofer</span>
                                                    </th>
                                                    <th style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>RUT</span>
                                                    </th>
                                                    <th style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Patente Camión</span>
                                                    </th>
                                                    <th style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Patente Remolque</span>
                                                    </th>
                                                    <th style="width: 210px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Transportes</span>
                                                    </th>

                                                </tr>
                                            </thead>
                                        <tbody>
                                            <t t-foreach="docs[1]" t-as="remolque">
                                               <t t-if="remolque[5] == o">
                                                    <tr class="text-center">
                                                        <td style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="remolque[0]"/>
                                                        </td>
                                                        <td style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="remolque[1]"/>
                                                        </td>
                                                        <td style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="remolque[2]"/>
                                                        </td>
                                                        <td style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="remolque[3]"/>
                                                        </td>
                                                        <td style="width: 200px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="remolque[4]"/>
                                                        </td>
                                                        <td style="width: 210px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                           <span />
                                                        </td>

                                                    </tr>
                                               </t>
                                            </t>
                                        </tbody>
                                    </table >

                                    <table style="margin-bottom:20px;">
                                        <thead>
                                                <tr>
                                                    <th style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>C.Riesgo/UN</span>
                                                    </th>
                                                    <th style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Código</span>
                                                    </th>
                                                    <th style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Descripción</span>
                                                    </th>
                                                    <th style="width: 80px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Cantidad</span>
                                                    </th>
                                                    <th style="width: 80px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>UM</span>
                                                    </th>
                                                    <th style="width: 280px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Cliente</span>
                                                    </th>
                                                    <th style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Destino</span>
                                                    </th>
                                                    <th style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>OC</span>
                                                    </th>
                                                    <th style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Coste Flete</span>
                                                    </th>
                                                    <th style="width: 80px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Gd</span>
                                                    </th>

                                                </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="cant_total" t-value="0"/>
                                            <t t-foreach="docs[2]" t-as="sale_order">
                                               <t t-if="sale_order[6] == o">
                                                    <tr style="high: 80px;" class="text-center">
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">

                                                        </td>
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="sale_order[0]"/>
                                                        </td>
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="sale_order[1]"/>
                                                        </td>
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <t t-set="cantidad_despachar" t-value="sale_order[2]"/>
                                                            <span t-esc="cantidad_despachar" />
                                                            <t t-set="cant_total" t-value="cant_total + cantidad_despachar"/>
                                                        </td>
                                                        <td style="width: 80px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="sale_order[3]"/>
                                                        </td>
                                                        <td style="width: 80px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="sale_order[4]"/>
                                                        </td>
                                                        <td style="width: 280px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">

                                                        </td>
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span t-esc="sale_order[5]"/>
                                                        </td>
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                                <span />
                                                        </td>
                                                        <td style="width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                                <span />
                                                        </td>
                                                    </tr>
                                               </t>
                                            </t>
                                            <tr>
                                                    <td colspan="3" style="text-align:center; width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                        <span>Total</span>
                                                    </td>

                                                    <td style="text-align:center; width: 130px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                        <span t-esc="cant_total" />
                                                    </td>
                                                </tr>
                                        </tbody>
                                    </table>

                                    <table style="margin-bottom:20px;">
                                        <thead>
                                                <tr>
                                                    <th style="width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Código</span>
                                                    </th>
                                                    <th style="width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Lote</span>
                                                    </th>
                                                    <th style="width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;" class="text-center">
                                                        <span>Fecha de vencimiento</span>
                                                    </th>
                                                </tr>
                                            </thead>
                                        <tbody>
                                            <t t-foreach="docs[3]" t-as="product">
                                               <t t-if="product[1] == o">
                                                    <tr class="text-center">
                                                    <td style="width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                        <span t-esc="product[0]"/>
                                                    </td>
                                                    <td style="width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">

                                                    </td>
                                                    <td style="width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">

                                                    </td>

                                                </tr>
                                               </t>
                                            </t>
                                        </tbody>
                                    </table>

                                    <span>Observaciones</span>
                                    <table>
                                        <tbody>
                                            <t t-foreach="docs[4]" t-as="contact">
                                                <t t-if="contact[1] == o">
                                                    <tr style="high: 80px;" class="text-center">
                                                        <td style="text-align: left; width: 433px; height:30px; border:1px solid #e1e1e1; padding:0; margin:0;">
                                                            <span>Contacto</span>
                                                            <span t-esc="contact[0]"/>
                                                        </td>

                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                    </table>

                                    <p style="page-break-after: always;"/>

                                </t>
                            </div>
                </t>
            </t>
        </template>


    </data>
</odoo>