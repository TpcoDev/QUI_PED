<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <report
                id="project_task_cargo_report_action"
                model="project.task"
                string="Reporte de carga PDF"
                name="fleet_additionals.report_project_task_cargo"
                file="fleet_additionals.report_project_task_cargo"
                print_report_name="'Reporte carga %s - %s' % (object.name, object.partner_id.name)"
                report_type="qweb-pdf"/>

        <template id="fleet_additionals.report_project_task_cargo">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h3 class="text-center">Reporte de carga</h3>
                        <table class="table table-bordered mt32">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <span>Solicutud de despacho</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Fecha planificada</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Producto</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Cantidad</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Cliente</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Vendedor</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Pedido de venta</span>
                                    </th>
                                    <th class="text-center">
                                        <span>Orden de entrega</span>
                                    </th>
                                </tr>
                            </thead>
                            <t t-foreach="docs" t-as="o">
                                <t t-if="o.planification == 'planifica'">
                                    <tbody>
                                        <tr class="text-center">
                                            <td>
                                                <span t-field="o.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.planned_date_begin"/> --> <span
                                                    t-field="o.planned_date_end"/>
                                            </td>
                                            <td>
                                                <span t-field="o.sale_line_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.cantidad_despachar"/>
                                            </td>
                                            <td>
                                                <span t-field="o.partner_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.user_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.sale_order_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="o.picking_id.name"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </t>
                            </t>
                        </table>

                    </div>

                </t>
            </t>
        </template>


    </data>
</odoo>